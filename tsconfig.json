{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/infrastructure/db/zapatos"
    ],
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "**/*.ts",
    "./src/infrastructure/db/zapatos/*.ts",
  ],
  "exclude": [
    ".*",
    "_*"
  ]
}